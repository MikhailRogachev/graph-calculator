<Window x:Class="ruby_plotter.app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ruby_plotter.app"
        xmlns:view="clr-namespace:ruby_plotter.app.Views"
        xmlns:viewModel="clr-namespace:ruby_plotter.app.ViewModel"
        mc:Ignorable="d"
        Title="Plotter" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:GraphListViewModel}">
            <view:Body/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <view:Header Grid.Row="0"/>

        <!-- Body -->
        <view:Body Grid.Row="1" Content="{Binding GraphListViewModel}"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem FontSize="20" Content="{Binding CurrentDate}"/>
        </StatusBar>
    </Grid>
</Window>
