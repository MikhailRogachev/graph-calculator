<UserControl x:Class="ruby_plotter.app.Views.PlotterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ruby_plotter.app.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />     
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock 
                Text="Sine Cardinal Plotter control panel" 
                Style="{StaticResource PlotterHeaderTextBlock}"/>
        </StackPanel>
        
        <ContentControl 
            Grid.Row="1" 
            Content="{Binding SinCardinalPlotView.Graphs}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Sinc Plotter control panel" />
        </StackPanel>

    </Grid>
</UserControl>
