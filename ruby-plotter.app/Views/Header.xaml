<UserControl x:Class="ruby_plotter.app.Views.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ruby_plotter.app.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid Background="{StaticResource HeaderBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBlock 
            Text="Graph Calculator and Plotter"
            Style="{StaticResource HeaderTextBlock}"
            Grid.Column="0"/>

        <StackPanel Grid.Column="2">
            <TextBlock
                Text="Prototype" 
                Style="{StaticResource VersionTextBlock}"/>
        </StackPanel>


    </Grid>
</UserControl>
