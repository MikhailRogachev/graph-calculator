<UserControl x:Class="ruby_plotter.app.UserControls.DurationSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:handlers="clr-namespace:ruby_plotter.app.Contracts.Handlers"
             xmlns:validators="clr-namespace:ruby_plotter.app.Contracts.Validators"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ruby_plotter.app.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="250">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0" 
            Text="Duration:" 
            Style="{StaticResource SettingTextBlock}" 
            />

        <TextBox 
            Grid.Row="1" 
            Grid.Column="0" 
            Style="{StaticResource SettingTextBox}" 
            handlers:EnterKeyHandler.IsEnabled="True"
            handlers:FocusOnValidationErrorHandler.IsEnabled="True">
            <TextBox.Text>
                <Binding Path="Duration" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validators:DoubleInputValidator IsPositiveOnly="True" ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
    </Grid>
</UserControl>

