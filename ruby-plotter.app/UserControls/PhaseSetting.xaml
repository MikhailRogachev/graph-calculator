<UserControl x:Class="ruby_plotter.app.UserControls.PhaseSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ruby_plotter.app.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="250">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0" 
            FontSize="12"
            Text="Phase:" 
            Margin="2 2 0 5"/>

        <TextBox 
            Grid.Row="1" 
            Grid.Column="0" 
            Text="{Binding Phase, Mode=TwoWay}" 
            Margin="2 2 2 20" 
            Width="Auto"/>

        <ComboBox 
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="0 2 2 20" 
            Width="Auto"
            DisplayMemberPath="Name"
            ItemsSource="{Binding PhaseMeasures}"
            SelectedItem="{Binding SelectedPhaseMeasure, Mode=TwoWay}"/>
    </Grid>
</UserControl>
